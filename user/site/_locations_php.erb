location / {
    root              <%= ENV['HOME'] %>/current/public;
    index             index.html index.htm index.php;
}

# The following location adds php support even if using passenger, however, the index files won't work if passenger is enabled.
location ~ \.php$ {
    include           /usr/local/nginx/conf/fastcgi_params;
    fastcgi_pass      127.0.0.1:9000;
    fastcgi_index     index.php;
    fastcgi_param     SCRIPT_FILENAME   <%= ENV['HOME'] %>/current/public$fastcgi_script_name;
}
